from lib import Benchmark

from edax import create_report
from tempfile import TemporaryDirectory
import dask.dataframe as dd


class EDAxReport(Benchmark):
    def init(self) -> None:
        pass

    def bench(self) -> None:
        if self.dpath.suffix == ".parquet":
            df = dd.read_parquet(self.dpath)
        elif self.dpath.suffix == ".csv":
            df = dd.read_csv(self.dpath)

        with TemporaryDirectory() as tdir:
            create_report(df, progress=False).save(f"{tdir}/report.html")


if __name__ == "__main__":
    EDAxReport().run()
